<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/StorieListCardView"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:elevation="5dp"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="5dp">

            <ImageView
                android:id="@+id/StorieImage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/StorieTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/StorieListCardView"
            android:layout_marginTop="10dp"
            android:text="@string/storie_title_dummy"
            android:textSize="15sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-condensed-medium"
            android:maxLines="3"
            android:minLines="1"
            />
        <TextView
            android:id="@+id/StorieDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/StorieTitle"
            android:text="@string/storie_time_dummy"
            android:textSize="14sp"
            android:textColor="@color/colorBlack"
            android:fontFamily="sans-serif-condensed-light"
            android:minLines="1"
            android:maxLines="1"
            />

    </RelativeLayout>

</RelativeLayout>